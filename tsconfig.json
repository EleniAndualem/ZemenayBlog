{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@ui/*": ["./components/ui/*"],
      "@hooks/*": ["./hooks/*"],
      "@lib/*": ["./lib/*"],
      "@styles/*": ["./styles/*"],
      "@public/*": ["./public/*"],
      "@scripts/*": ["./scripts/*"],
      "@prisma/*": ["./prisma/*"],
      "@api/*": ["./app/api/*"],
      "@auth/*": ["./app/auth/*"],
      "@profile/*": ["./app/profile/*"],
      "@categories/*": ["./app/categories/*"],
      "@NewsletterForm": ["./components/NewsletterForm"],
      "@RichTextEditor": ["./components/RichTextEditor"],
      "@theme-provider": ["./components/theme-provider"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
